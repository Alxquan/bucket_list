<h1>Buckets</h1>

<p><%= link_to 'New Bucket List', new_bucket_path %></p>


<% @buckets.each do |bucket| %>
  <h2><%= bucket.title %></h2>
  <p><%= bucket.body %></p>
  <%= link_to 'Show Bucket', bucket_path(bucket)%>
  <%= link_to 'Add Tasks', bucket_tasks_path(bucket) %>
  <%= link_to 'Kick the bucket(Delete)', bucket_path(bucket), method: :delete %>
<% end %>

